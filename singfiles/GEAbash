-type f -name "*_cifblast.txt" -exec grep -H -c '[^[:space:]]' {} \; | sort -nr -t":" -k2 | awk -F: '{print $1; exit;}'); if [ "${#elibrary}" -gt 0 ]; then maxrows=$(sed \
