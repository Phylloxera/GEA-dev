"PlasID$j"='$(sed "${k}q;d" ${plasmid}${slib}_plasfinder.tsv | cut -f 3)'; eval "PlasQ_T_Len$j"='$(sed "${k}q;d" ${plasmid}${slib}_plasfinder.tsv | cut -f 4)'; eval \
