exec --app cge $cont plasmidfinder.py -i ${contigfolder}${lib}.fa -o ${lib} -p ${plfdb} -mp blastn -t 0.9 -l 0.8 -x -q > ${lib}_plasmidfinder.log 2>&1 && mv \
${lib}/results_tab.tsv ${plasmid}${lib}_plasfinder.tsv && mv ${lib}_plasmidfinder.log ${plasmid}${lib}_plasmidfinder.log && rm -r ${lib} & done; wait; END_TIME=$(date +%s)
echo "elapsed time for plasmid detection $(($END_TIME - $START_TIME)) seconds."
