${refi}${olib}_tab.tsv)); IFS=$OIFS; delim=""; aq_summary_string=""; printf -v aq_summary_string '%s,' "${aq_summary_array[@]}"; AqResGeneList=$(echo \
"${aq_summary_string%,}" | tr -d '\n'); MutResGeneCount="NA"; MutResGeneList="NA"
#plasmid
