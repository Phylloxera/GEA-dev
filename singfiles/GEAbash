#!/bin/bash

###GEAbash (Gammaproteobacteria Epidemiologic Annotation) data processing bash script. v0.0.2

#init vars
workdir=$(pwd); username=$(whoami); echo "GEAbash is being run by $username"; input=''; platform="MiSeq"; project="NA"; overwrite=F; ucge=T; runtime=24:00:00; hpcmem=360GB
hpcthreads=72; hpc=F; queue=NA; account=NA; singmod=apptainer; software=$HOME/software; cont=$software/geacont; taxon=both; result=${workdir}/"results"/
grouped=${result}"grouped"/; assembly=${result}"assembly"/; shovill=${assembly}"shovill"/; shlog=${shovill}"log"/; contigfolder=${shovill}"contigs"/; sgfa=${shovill}"gfa"/
spades=${shovill}"spades"/; skesa=${assembly}"skesa"/; corrections=${shovill}"corrections"/; mlst=${result}"mlst"/; ecoli_mlst=${mlst}"ecoli"/
senterica_mlst=${mlst}"senterica"/; serotype=${result}"serotyping"/; blast_res=${result}"blast"/; fimht=${result}"fimht"/; plasmid=${result}"plasmids"/
resist=${result}"resistance"/; refi=${resist}"resfinder"/; pofi=${resist}"pointfinder"/; pofe=${pofi}"ecoli"/; pofs=${pofi}"senterica"/; tempdir=${result}"tempdir"/
clermont=${result}"clermont"/; virulence=${result}"virulence"/; organism1="mlst"; organism2="serotypefinder"; organism3="pointfinder"; organism4="resfinder"
organism5="plasmidfinder"; organism6="virulencefinder"; organism7="fimtyper"; organism8=blast; dbserver1="mlst_db"; dbserver2="serotypefinder_db"; dbserver3="pointfinder_db"
dbserver4="resfinder_db"; dbserver5="plasmidfinder_db"; dbserver6="virulencefinder_db"; dbserver7="fimtyper_db"; dbserver8=5loci; mdb=$HOME/share/${organism1}/${dbserver1}
sdb=$HOME/share/${organism2}/${dbserver2}; pofdb=$HOME/share/${organism3}/${dbserver3}; rfdb=$HOME/share/${organism4}/${dbserver4}; plfdb=$HOME/share/${organism5}/${dbserver5}
vfdb=$HOME/share/${organism6}/${dbserver6}; ftdb=$HOME/share/${organism7}/${dbserver7}; blastdb=$HOME/share/${organism8}/${dbserver8}; dbname1=SentericaEffectorAvrA_avrA
dbname2=CytolethalDistendingToxin_cdt; dbname3=CycleInhibitingFactor_cif; dbname4=Colibactin_clb; dbname5=CytotoxicNecrotizingFactor_cnf
nprocs=$( ls -d /sys/devices/system/cpu/cpu[[:digit:]]* | wc -w )
#print_usage and printf appear to be c++
print_usage() {
  printf "Usage: ..."
}
while getopts ':i:t::u::o::p::j::q::r::m::c::s::a::h::' flag; do #leading colon appears necessary
  case "${flag}" in
    i) input="${OPTARG}" ;;    t) taxon="${OPTARG}" ;;    u) ucge="${OPTARG}" ;;    o) overwrite="${OPTARG}" ;;    p) platform="${OPTARG}" ;;    j) project="${OPTARG}" ;;
    q) queue="${OPTARG}" ;;    r) runtime="${OPTARG}" ;;    m) hpcmem="${OPTARG}" ;;    c) hpcthreads="${OPTARG}" ;;    s) singmod="${OPTARG}" ;;    a) account="${OPTARG}" ;;
    h) hpc="${OPTARG}" ;;
    *) print_usage
       exit 1 ;;    esac; done
#GEAbash help message. print if no input
if [[ -n "$input" ]]; then :; else echo -n "GEAbash(Gammaproteobacteria Epidemiologic Annotation) data processing bash script version 0.0.2 by aaron dickey aaron<dot>dickey"
echo "<at>usda.gov"; echo "command structure: '$HOME/software/GEAbash -i <raw data input> <optional variables>'"; echo -n 'run example: $HOME/software/GEAbash -i '; echo \
'$HOME/data/Manita/upgrade/folin2" > log 2>&1 &'; echo -n "-i input   required  can be 1-or-more input folders of illumina raw read gzipped fastq files and/or assemblies. "
echo "Separate multiple inputs by commas."; echo -n "-t taxon   optional  default both  what is the taxon of the input, both or ecoli or senterica. By default, GEAbash "
echo "determines taxonomy by comparing ecoli and senterica MLST profiles."; echo "-o overwrite   optional default F  should the results folder be overwritten, T or F"; echo \
"-u  update cge databases   optional default T   should the cge databases be updated, T or F"; echo -n "high performance computer job management variables   queue is required"
echo -n " if setting up a slurm or sun grid engine (SGE) job: -q queue  name of the queue; -r runtime  runtime in formant HH:MM:SS. e.g. 00:30:00 for a 30 minute job. default"
echo " 24:00:00."; echo "-m memory requested  A number (in GB) for SGE jobs or a number with a unit for slurm jobs. default 360GB."; echo -n "-c cores requested  A number. "
echo "default 72."; echo -n "-s  singularity module   optional default 'module load singularity'   what module is needed to access singularity on hpc cluster. argument must "
echo "be quoted. if singularity is available by default, use the argument '#' to disable modules"; echo "-a account   required if job scheduler requires it for job submission"
echo -n "a note on shovill: settings are --R1 <forward reads> --R2 <reverse reads> --trim --ram <calculated internally based on available memory>. to request different "
echo "settings, contact the author"; echo -n "a note on mlst.py: settings are -i <contigs> -p <path to local database> -o <output directory> -s <ecoli/senterica(each assembly"
echo " run with both to determine species)> -x -t <temporary directory> -q"; echo -n "a note on serotypefinder.py (mlst identified ecoli only): settings are -i <contigs> -p "
echo "<path to local database> -o <output directory> -t 0.95 -l 0.80 -x -q"; echo -n "a note on SeqSero2_package.py (mlst identified senterica only): settings are -m k -t 4 "
echo "-i <contigs> -d <output directory>"; echo -n "a note on resfinder: settings are -ifa <contigs> -acq -c -db_res <path to local resfinder_db database> -db_point <path to "
echo "local pointfinder_db database> -t 0.9 -l 0.8 -s <species identified by mlst: either salmonella or escherichi> -o <output directory>"; echo -n "a note on "
echo "plasmidfinder.py: settings are -i <contigs> -p <path to local database> -o <output directory> -mp <path to blastn> -t 0.9 -l 0.8 -x -q"; echo -n "a note on skesa: "
echo "settings are --reads <forward reads,reverse reads> --cores <calculated internally based on available cores> --memory <calculated internally based on available memory>"
echo -n "a note on virulencefinder.py (mlst identified ecoli only): settings are -i <contigs> -p <path to local database> -o <output directory> -d virulence_ecoli -mp <path t"
echo "o blastn> -t 0.95 -l 0.80 -x -q"; echo "a note on ezclermont: default settings are used"; echo -n "a note on fimtyper.pl: settings are -i <contigs> -o <output directory"
echo "> -d <path to local database> -k '95.0' -l 0.8"; echo -n "All local databases are created if not present using git clone from https://bitbucket.org/genomicepidemiology, "
echo "e.g., https://bitbucket.org/genomicepidemiology/fimtyper_db.git."; exit 0; fi
#setting up hpc/normal accounts for different singularity modules or no modules. -h internally detected.
while [ $hpc == F ]; do if [ ! $queue == "NA" ]; then if [ -n "$(sinfo 2>/dev/null)" ]; then submsys=slurm; elif [ -n "$(qhost 2>/dev/null)" ]; then submsys=sge; else echo \
"queue specified but hpc system uncertain. exiting"; exit 1; fi; if [[ " ${submsys} " = " sge " ]]; then if [ -f sge.sh ]; then rm GEAbash.* >/dev/null 2>&1; sleep 60; fi
apptainer exec $cont cp /usr/local/src/sge.sh .; elif [[ " ${submsys} " = " slurm " ]]; then if [ -f slurm.sh ]; then rm slurm*.out >/dev/null 2>&1; sleep 60; fi
apptainer exec $cont cp /usr/local/src/slurm.sh .; else echo "system uncertain. exiting"; exit 1; fi; if [[ " ${queue} " = " NA " ]]; then echo -n "queue not specified. "
echo "exiting"; exit 1; fi; if [[ " ${submsys} " = " sge " ]]; then echo -n "preparing to run GEAbash in hpc cluster mode. GEAbash log outputs will be in the hpc submission "
echo "system log files for sge. e.g., GEAbash.e* & GEAbash.o*"; sed -i "s/name/GEAbash/g" sge.sh; sed -i "s/queue/$queue/g" sge.sh; sed -i "s/runtime/$runtime/g" sge.sh; sed \
-i "s/RAM/$hpcmem/g" sge.sh; sed -i "s/hpctasks/$hpcthreads/g" sge.sh; sed -i \
's%command%$software/GEAbash -i "${input}" -o "${overwrite}" -u "${ucge}" -p "${platform}" -j "${project}" -t "${taxon}" -c "${hpcthreads}" -h T%g' sge.sh; sed -i \
"s%vars%software='$software'; input='$input'; overwrite='$overwrite'; ucge='$ucge'; platform='$platform'; project='$project'; taxon='$taxon'; hpcthreads='$hpcthreads'%g" \
sge.sh; sed -i "s/modules/$singmod/g" sge.sh; if [ $account == "NA" ]; then other='##'; sed -i "s/account/$other/g" sge.sh; sed -i "s/-P #/###/g" sge.sh; else sed -i \
"s/account/$account/g" sge.sh; fi; qsub sge.sh; exit 0; else echo -n "preparing to run GEAbash in hpc cluster mode. GEAbash log outputs will be in the hpc submission system "
echo "log files for slurm. e.g., slurm-*.out"; sed -i "s/name/GEAbash/g" slurm.sh; sed -i "s/queue/$queue/g" slurm.sh; sed -i "s/runtime/$runtime/g" slurm.sh; sed -i \
"s/RAM/$hpcmem/g" slurm.sh; sed -i "s/hpctasks/$hpcthreads/g" slurm.sh; sed -i 's/other/$other/g' slurm.sh; sed -i \
's%command%$software/GEAbash -i "${input}" -o "${overwrite}" -u "${ucge}" -p "${platform}" -j "${project}" -t "${taxon}" -c "${hpcthreads}" -h T%g' slurm.sh; sed -i \
"s%vars%software='$software'; input='$input'; overwrite='$overwrite'; ucge='$ucge'; platform='$platform'; project='$project'; taxon='$taxon'; hpcthreads='$hpcthreads'%g" \
slurm.sh; sed -i "s/modules/module load $singmod/g" slurm.sh; if [ $account == "NA" ]; then other='##'; sed -i "s/account/$other/g" slurm.sh; sed -i "s/-A #/###/g" slurm.sh
else sed -i "s/account/$account/g" slurm.sh; fi; sbatch slurm.sh; exit 0; fi; fi; if [ $queue == "NA" ]; then echo "running GEAbash in regular mode"
if [ -n "$(sinfo 2>/dev/null)" ]; then echo "queue not specified for running in hpc mode. exiting"; exit 1; elif [ -n "$(qhost 2>/dev/null)" ]; then echo -n "queue not "
echo "specified for running in hpc mode. exiting"; exit 1; fi; fi; hpc=T; done

#process user inputs#folders processed first so can have numbers only.
START_TIME=$(date +%s); echo "processing user inputs"; if [ -d $result ]; then if [ $overwrite == F ]; then echo -n "results present and overwrite=F. to overwrite, re-run "
echo "command with the option -o T. exiting"; exit 1; else echo "overwriting results"; rm -r $result; mkdir $result $grouped $assembly $shovill $contigfolder $skesa $mlst \
$ecoli_mlst $senterica_mlst $serotype $plasmid $resist $pofi $refi $tempdir $spades $corrections $shlog $sgfa $blast_res; fi; else mkdir $result $grouped $assembly $shovill \
$skesa $contigfolder $mlst $ecoli_mlst $senterica_mlst $serotype $plasmid $resist $pofi $refi $tempdir $spades $corrections $shlog $sgfa $blast_res; fi
#data on marc core lab storage
if [ $platform == 'NextSeq' ]; then parentdir="/mnt/NextSeq/NextSeq_Output/"; elif [ $platform == 'MiSeq' ]; then parentdir="/mnt/MiSeq/Analysis/"
elif [ $platform == 'NextSeq2k' ]; then parentdir="/mnt/NextSeq/NextSeq_2K_Output/"; else echo "You have not set your platform correctly"; fi; if [ $platform == 'NextSeq2k' ]
then subdir="/Analysis/1/Data/fastq/"; else subdir="/Data/Intensities/BaseCalls/"; fi; unset insets; declare -A insets; NOR=$(echo $input | grep -o ',' | wc -l)
NOR=$((NOR+1)); for (( j=1; j <= NOR; j++ )); do insets[$(paste <(echo "in") <(echo $j) --delimiters '')]=$(paste <(echo $input | tr "," "\t" | cut -f$j) --delimiters '')
done; unset folders; folders=(); unset rundates; rundates=(); unset leftovers; leftovers=(); re='^[0-9]+$'; for i in "${insets[@]}"; do tv=$(eval echo "${i}")
if [[ -d "${tv}" ]]; then folders+=("${tv}"); elif [[ "${tv}" =~ $re ]]; then rundates+=("${tv}"); else leftovers+=("${tv}"); fi; done
#process leftovers
if [ "${#leftovers}" -gt 0 ]; then for (( i=0;  i < ${#leftovers[@]};  i++ )); do eval "rundate_alt$i"=${leftovers[i]}; done; unset rdcheck; declare -A rdcheck=( )
for v in "${!rundate_alt@}"; do rdcheck[${v}]="${parentdir}${!v}"*"${subdir}"; done; for v in "${!rdcheck[@]}"; do if [ $project == 'NA' ]; then x=$(eval echo \
${rdcheck[$v]}); else x=$(eval echo ${rdcheck[$v]})"${project}"; fi; y="$v"; z=$(ls "${x}"/*f*q.gz 2> /dev/null | wc -l); if [ $z -lt 1 ]; then echo -n "could not find "
echo "input folder(s) ${leftovers[i]} or ${x}. exiting"; exit 1; else ln -s "${x}" "${result}$y"; fi; done; fi
#process rundates
if [ "${#rundates}" -gt 0 ]; then for (( i=0;  i < ${#rundates[@]};  i++ )); do eval "rundate_num$i"=${rundates[i]}; done; unset rd; declare -A rd=( )
for v in "${!rundate_num@}"; do rd[${v}]="${parentdir}${!v}"*"${subdir}"; done; for v in "${!rd[@]}"; do if [ $project == 'NA' ]; then x=$(eval echo ${rd[$v]})
else x=$(eval echo ${rd[$v]})"${project}"; fi; y="$v"; z=$(ls "${x}"/*f*q.gz 2> /dev/null | wc -l); if [ $z -lt 1 ]; then echo -n "$x either has no gzipped fastqs or"
echo -n " does not exist. check that your inputs contain gzipped fastq files. to qc check rundates, try constructing a command with the format: ls $parentdir<rundate><tab>, "
echo -n "e.g. type ls $parentdir/210422 and then press the tab key 2 times. If no results show up, there is no raw data for that platform and rundate. If 2 results show up, "
echo -n "you need to rerun gea with additional characters appended to the end of your run date to distinguish among alternatives, e.g. $HOME/software/GEAbash -i 171213_NS5002"
echo " -t cow -p NextSeq -j GPE7_WGS. questions can be sent to the author of GEAbash. exiting"; exit 1; else ln -s "${x}" "${result}$y"; fi; done; fi
#process folders last
if [ "${#folders}" -gt 0 ]; then for (( i=0;  i < ${#folders[@]};  i++ )); do eval "folder$i"='"${folders[i]}"'; done; unset folders; unset foldercount; unset fol; declare \
-A fol=( ); for v in "${!folder@}"; do fol[${v}]="${!v}"; done; for v in "${!fol[@]}"; do x=$(eval echo ${fol[$v]}); cd "$x"; x=$(pwd); cd $workdir; y="$v"; z=$(ls \
"${x}"/*.f*q.gz 2> /dev/null | wc -l); fa_input=$(ls "${x}"/*.f*a 2> /dev/null | wc -l); fasta_input=$(ls "${x}"/*.fasta 2> /dev/null | wc -l); fna_input=$(ls \
"${x}"/*.fna 2> /dev/null | wc -l); if [ $z -lt 1 ]; then if [ $fa_input -lt 1 ]; then echo "input folders don't contain f*q.gz or f*a file extensions. exiting"; exit 0
else cp "${x}"/*.f*a $contigfolder; fi; if [ $fasta_input -gt 0 ]; then cd $contigfolder; for file in *.fasta; do mv -- "$file" "${file%.fasta}.fa"; done; fi; 
if [ $fna_input -gt 0 ]; then cd $contigfolder; for file in *.fna; do mv -- "$file" "${file%.fasta}.fa"; done; fi; else ln -s "${x}" "${result}$y"; fi; done; fi
#allin for determining assembly
allin=($(ls -lR $result | grep ^l | grep -E -o '(rundate|folder).{0,300}' | cut -d ' ' -f1))
#fail safe for any empty input contigs
r=($(ls ${contigfolder}*.fa 2>/dev/null)); b=(${r[*]##*/}); tmp=(${b[*]%.*}); clibrary=($(printf "%s\n" "${tmp[@]}" | sort -u)); for clib in ${clibrary[*]}
do if [[ -f ${contigfolder}${clib}.fa ]]; then if [[ $(cat ${contigfolder}${clib}.fa | wc -l) -eq 0 ]]; then rm ${contigfolder}${clib}.fa; echo \
"there are no contigs in $clib. removing."; fi; fi; done
#database checks that are not species specific.
cd $HOME; if [ -d "share" ]; then :; else mkdir share; fi; cd share; if [ -d "$organism3" ]; then cd $organism3; else mkdir $organism3; cd $organism3; fi
if [[ -d "$dbserver3" && $(ls ${dbserver3} | wc -l) -eq 0 ]]; then rm -rf ${dbserver3}; fi; if [ $(ls ${dbserver3} 2>/dev/null | wc -l) -gt 0 ]; then :; if [[ "$ucge" = T ]]
then rm -rf ${pofdb}; apptainer exec $cont git clone https://bitbucket.org/genomicepidemiology/pointfinder_db.git; else :; fi; else apptainer exec $cont git clone \
https://bitbucket.org/genomicepidemiology/pointfinder_db.git; ud=$(date +%Y/%m/%d); echo "pointfinder database created by $username on $ud"; fi; cd $HOME/share
if [ -d "$organism4" ]; then cd $organism4; else mkdir $organism4; cd $organism4; fi; if [[ -d "$dbserver4" && $(ls ${dbserver4} | wc -l) -eq 0 ]]; then rm -rf ${dbserver4}
fi; if [ $(ls ${dbserver4} 2>/dev/null | wc -l) -gt 0 ]; then :; if [[ "$ucge" = T ]]; then rm -rf ${rfdb}; apptainer exec $cont git clone \
https://bitbucket.org/genomicepidemiology/resfinder_db.git; else :; fi; else apptainer exec $cont git clone https://bitbucket.org/genomicepidemiology/resfinder_db.git
ud=$(date +%Y/%m/%d); echo "resfinder database created by $username on $ud"; fi; cd $HOME/share; if [ -d "$organism5" ]; then cd $organism5; else mkdir $organism5; cd \
$organism5; fi; if [[ -d "$dbserver5" && $(ls ${dbserver5} | wc -l) -eq 0 ]]; then rm -rf ${dbserver5}; fi; if [ $(ls ${dbserver5} 2>/dev/null | wc -l) -gt 0 ]; then :
if [[ "$ucge" = T ]]; then rm -rf ${plfdb}; apptainer exec $cont git clone https://bitbucket.org/genomicepidemiology/plasmidfinder_db.git; else :; fi; else apptainer \
exec $cont git clone https://bitbucket.org/genomicepidemiology/plasmidfinder_db.git; ud=$(date +%Y/%m/%d); echo "plasmidfinder database created by $username on $ud"; fi; cd \
$HOME/share; if [ -d "$organism8" ]; then cd $organism8; else mkdir $organism8; cd $organism8; fi; if [[ -d "$dbserver8" && $(ls ${dbserver8} | wc -l) -eq 0 ]]; then rm -rf \
${dbserver8}; fi; if [ $(ls ${dbserver8} 2>/dev/null | wc -l) -gt 0 ]; then :; if [[ "$ucge" = T ]]; then rm -rf ${blastdb}; apptainer exec $cont git clone \
https://github.com/Phylloxera/5loci.git; else :; fi; else apptainer exec $cont git clone https://github.com/Phylloxera/5loci.git; ud=$(date +%Y/%m/%d); echo -n "blast "
echo "database created by $username on $ud"; fi
#calc vars; redefine nprocs, etc. to account for slurm / sge / single computer.
if [ -n "$(sinfo 2>/dev/null)" ]; then nprocs=$hpcthreads; fi; if [ -n "$(qhost 2>/dev/null)" ]; then nprocs=$hpcthreads; fi; util_float=$(top -d 0.5 -b -n2 | grep \
"Cpu(s)" | tail -n 1 | awk '{print $2}'); util=$(echo $util_float | awk '{print int($1+0.5)}'); if [ "${util}" -gt 0 ]; then nprocs=$((nprocs - util)); fi; echo \
"nprocs:$nprocs"; maxram=$(apptainer exec $cont bc <<<"$(awk '/MemTotal/{print $2}' /proc/meminfo)/1000000"); shov_par=$(apptainer exec $cont bc <<<"$nprocs/3")
shov_ram=$(apptainer exec $cont bc <<<"$maxram/$shov_par"); cgeprocs=$(apptainer exec $cont bc <<<"$nprocs/2")
#the max_bg_procs function for paralellizing certain tasks. attempting again sept 2022 with cge programs.
function max_bg_procs {
if [[ $# -eq 0 ]] ; then echo -n "Usage: max_bg_procs NUM_PROCS.  Will wait until the number of background (&) bash processes (as determined by 'jobs -pr') falls below "
echo "NUM_PROCS"; return; fi; local max_number=$((0 + ${1:-0})); while true; do local current_number=$(jobs -pr | wc -l); if [[ $current_number -lt $max_number ]]
then break; fi; sleep 1; done
}
END_TIME=$(date +%s); echo "elapsed time for processing user input $(($END_TIME - $START_TIME)) seconds"
#group raw data. updated for fq diversity. only for paired end. has duplicate checking
if [[ -n "$allin" ]]; then START_TIME=$(date +%s); echo "grouping raw data for each library across lanes/rundates/folders"; cd $result; for (( i=0;  i < ${#allin[@]};  i++ ))
do x="${allin[i]}"; unset r; unset b; unset tmp; unset library; r=($(ls ${x}/*f*q.gz)); b=(${r[*]##*/}); tmp=(${b[*]%%_*}); library=($(printf "%s\n" "${tmp[@]}" | sort -u))
und="Undetermined"; for (( j=0; j<${#library[@]}; j++ )); do if [[ ${library[j]} == $und ]]; then library=( "${library[@]:0:$j}" "${library[@]:$((j + 1))}" ); j=$((j - 1)); fi
done; cd $x; for lib in ${library[*]}; do max_bg_procs $nprocs; cat ${lib}*_R1*.f*q.gz > ${grouped}/${lib}_"tmp$i"_R1.fq.gz && cat ${lib}*_R2*.f*q.gz > \
${grouped}/${lib}_"tmp$i"_R2.fq.gz & done; wait; for lib in ${library[*]}; do if [ $(ls ${grouped}/${lib}_"tmp$i"_*.fq.gz | wc -l) -eq 2 ]; then :; else echo -n "raw data "
echo "grouping halted due to error. report this error to the program developer. exiting"; exit 1; fi; done; cd $result; done; if ls rundate* 1> /dev/null 2>&1; then rm \
$result/rundate*; fi; if ls folder* 1> /dev/null 2>&1; then rm $result/folder*; fi; unset r; unset b; unset tmp; unset library; r=($(ls ${grouped}*.fq.gz)); b=(${r[*]##*/})
tmp=(${b[*]%%_*}); library=($(printf "%s\n" "${tmp[@]}" | sort -u)); cd ${grouped}; files="$( ls -l|grep '^-'|awk \
'{if(a[$5]){ a[$5]=a[$5]"\n"$NF; b[$5]++;} else a[$5]=$NF} END{for(x in b)print a[x];}' )"; for file1 in $files; do for file2 in $files
do if [[ "$file1" != "$file2" && -e "$file1" && -e "$file2" ]]; then if diff "$file1" "$file2" > /dev/null; then rm -v "$file2"; fi; fi; done; done; for lib in ${library[*]}
do max_bg_procs $nprocs; cat ${lib}*R1.fq.gz > ${grouped}/${lib}_R1.fq.gz && cat ${lib}*R2.fq.gz > ${grouped}/${lib}_R2.fq.gz & done; wait; sorted_unique_ids=($(echo \
"${library[@]}" | tr ' ' '\n' | cut -c1,2,3 | sort -u | tr '\n' ' ')); for (( i=0;  i < ${#sorted_unique_ids[@]};  i++ )); do rm ${sorted_unique_ids[i]}*tmp*; done
if [ -d "${grouped}" ]; then if [ ${#library[@]} -lt 1 ]; then echo "no raw data libraries found after group step. exiting."; exit 1; else :; fi; else echo -n "no grouped "
echo "folder present. exiting."; exit 1; fi; END_TIME=$(date +%s); echo "elapsed time for grouping $(($END_TIME - $START_TIME)) seconds" 

#assembly.
START_TIME=$(date +%s); if [[ -n "$TMPDIR" ]]; then echo "TMPDIR is $TMPDIR"; cd $TMPDIR; fi; echo "starting genome assemblies"; for lib in ${library[*]}; do max_bg_procs \
$shov_par; apptainer exec $cont shovill --outdir ${shovill}${lib} --R1 ${grouped}${lib}_R1.fq.gz --R2 ${grouped}${lib}_R2.fq.gz --trim --ram $shov_ram > \
${shovill}${lib}_debug 2>&1 & done; wait; for lib in ${library[*]}; do if [ -d "${shovill}${lib}" ]; then cd ${shovill}${lib}; if [[ -f contigs.fa ]]; then mv \
${shovill}${lib}/contigs.fa ${contigfolder}${lib}.fa; mv ${shovill}${lib}/shovill.corrections ${corrections}${lib}_shovill.corrections; mv ${shovill}${lib}/spades.fasta \
${spades}${lib}_spades.fasta; mv ${shovill}${lib}/contigs.gfa ${sgfa}${lib}_contigs.gfa; mv ${shovill}${lib}/shovill.log ${shlog}${lib}_shovill.log; cd ${shovill}; rm \
-r ${shovill}${lib}; rm ${shovill}${lib}_debug; else mv ${shovill}${lib}/shovill.log ${shlog}${lib}_shovill.log; cd ${shovill}; rm -r ${shovill}${lib}; rm \
${shovill}${lib}_debug; echo "shovill did not produce contigs from $lib. see ${shlog}${lib}_shovill.log for details."; fi; else echo -n "shovill not run for $lib. check "
echo "${shovill}${lib}_debug for more information."; fi; done; for lib in ${library[*]}; do if [[ -f ${contigfolder}${lib}.fa ]]; then if [[ $(cat \
${contigfolder}${lib}.fa | wc -l) -eq 0 ]]; then rm ${contigfolder}${lib}.fa; echo -n "shovill did not produce contigs from $lib. see "; echo -n "${shlog}${lib}_shovill.log "
echo "for details."; fi; fi; done; if [[ $(ls ${contigfolder} 2> /dev/null | wc -l) -eq 0 ]] ; then echo -n "assembly with shovill did not produce any contigs for downstream "
echo "annotation. exiting"; exit 1; fi; cd ${skesa}; skes_cores=$(apptainer exec $cont bc <<<"$nprocs/$shov_par"); for lib in ${library[*]}; do max_bg_procs $shov_par
apptainer exec $cont skesa --reads ${grouped}${lib}_R1.fq.gz,${grouped}${lib}_R2.fq.gz --cores $skes_cores --memory $shov_ram > ${lib}.skesa.fa 2>"${lib}_skesa.log" & done
wait; for lib in ${library[*]}; do if [[ -f ${lib}.skesa.fa ]]; then if [[ $(cat ${lib}.skesa.fa | wc -l) -eq 0 ]]; then rm ${lib}.skesa.fa; echo -n "skesa did not produce "
echo "contigs from $lib so plasmids can not be searched in the skesa assembly. see ${skesa}${lib}_skesa.log for details."; fi; else echo -n "skesa did not create "; echo \
"${lib}.skesa.fa. check ${skesa}${lib}_skesa.log for details"; fi; done; for lib in ${library[*]}; do if [[ -f ${lib}.skesa.fa ]]; then grep -A 1 "Circ" ${lib}.skesa.fa > \
${lib}_plas.fa; fi; if [[ $(cat ${lib}_plas.fa | wc -l) -eq 0 ]]; then rm ${lib}_plas.fa; fi; done; for lib in ${library[*]}; do if [[ -f ${lib}.plas.fa ]]; then apptainer \
exec $cont perl -pi -e "s/^>/>${lib}-/g" ${lib}_plas.fa; fi; done; cat *_plas.fa > ${result}skesa_plasmids.fa; END_TIME=$(date +%s); echo -n "elapsed time for assembling "
echo "genomes $(($END_TIME - $START_TIME)) seconds."; else :; fi

#redefine library
cd ${contigfolder}; files="$( ls -l|grep '^-'|awk '{if(a[$5]){ a[$5]=a[$5]"\n"$NF; b[$5]++;} else a[$5]=$NF} END{for(x in b)print a[x];}' )"; for file1 in $files
do for file2 in $files; do if [[ "$file1" != "$file2" && -e "$file1" && -e "$file2" ]]; then if diff "$file1" "$file2" > /dev/null; then rm -v "$file2"; fi; fi; done; done
unset r; unset b; unset tmp; unset library; r=($(ls ${contigfolder}*.fa 2> /dev/null)); b=(${r[*]##*/}); tmp=(${b[*]%.*}); library=($(printf "%s\n" "${tmp[@]}" | sort -u))

