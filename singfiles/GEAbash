wait; for olib in ${olibrary[*]}; do while [[ ! -f "${olib}/ResFinder_results_tab.txt" ]]; do sleep 10; if [[ $(grep Error ${olib}_resfinder.log | wc -l) -gt 0 ]]; then echo \
"There is a resfinder error for $olib. The log will be saved in $refi$olib_resfinder.log. No annotations will be provided."; for (( j=0; j<${#olibrary[@]}; j++ ))
do if [[ ${olibrary[j]} == $olib ]]; then olibrary=( "${olibrary[@]:0:$j}" "${olibrary[@]:$((j + 1))}" ); j=$((j - 1)); fi; done; mv ${olib}_resfinder.log $refi; break; fi
done; done; for olib in ${olibrary[*]}; do mv ${olib}/ResFinder_results_tab.txt ${refi}${olib}_tab.tsv; mv ${olib}_resfinder.log ${refi}; rm -r ${olib}; done
