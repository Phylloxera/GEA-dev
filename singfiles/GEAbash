echo ". No annotations will be provided."; for (( j=0; j<${#elibrary[@]}; j++ )); do if [[ ${elibrary[j]} == $elib ]]
then elibrary=( "${elibrary[@]:0:$j}" "${elibrary[@]:$((j + 1))}" ); j=$((j - 1)); fi; done; mv ${elib}_resfinder.log $pofe; break; fi; done; done; for elib in ${elibrary[*]}
